#include <bits/stdc++.h>
using namespace std;

int queues, mini,where, aux=1;
bool found;
int main(){
cin.tie(0); ios::sync_with_stdio(0);
cin>>queues;
int arranjo[queues];
for(int i=0; i<queues; i++){
    if(i==0){
        cin>>arranjo[queues-1];
        mini= arranjo[queues-1];
        if(arranjo[queues-1]==0){
            cout<<"1\n";
            found = true;
            break;
        }
    }else{
        cin>>arranjo[i-1];
        if(arranjo[i-1] <=mini){
            mini = arranjo[i-1];
            where = i;
        }
    }
}
cout<<where<<"\n";
for(int i = 0; i<queues; i++){
    arranjo[i] -=mini;
    cout<<arranjo[i]<<" ";
}
cout<<"\n";
if(mini == 0){
for(int i = 0; i<queues && !found; i++){
   if(i != queues-1){
       if(arranjo[i]-(i+1)<=0){
           cout<<i+2<<"one\n";
           found = true;
       }
   }else{
       if(arranjo[queues-1]-(i+1) <=0){
           cout<<"1two\n";
           found = true;
       }
   }
}
}else{
for(int i = where;!found ; i++){
    if(arranjo[i]-aux <= 0){
        cout<<i%queues;
    }
}

}

    return 0;
}


/*
6
5 2 6 5 7 4

0 4 3 5 2 3
2 3 4 5 6 1
where = 1;
*/
